				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.mobicents.servlet.sip</groupId>
			<artifactId>sip-servlets-core-api</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.jboss.security</groupId>
					<artifactId>jboss-negotiation-extras</artifactId>
